<Window x:Class="Dev2.Views.SharepointServerSource.SharepointServerSource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sharepointServerSource="clr-namespace:Dev2.Views.SharepointServerSource"
        xmlns:attachedProperties="clr-namespace:Dev2.Activities.AttachedProperties;assembly=Dev2.Activities.Designers"
        Title="SharepointServerSource" Height="150" Width="300" WindowStyle="None"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">Server Name:</Label>
        <TextBox VerticalAlignment="Center" Height="25" Grid.Row="0" Grid.Column="1" Text="{Binding ServerName}"></TextBox>
        <Label VerticalAlignment="Center" Grid.Row="1" Grid.Column="0">Authentication Type:</Label>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch">
            <RadioButton GroupName="AuthenticationType" IsChecked="{Binding IsWindows}" Margin="0,0,5,0">Windows</RadioButton>
            <RadioButton GroupName="AuthenticationType" IsChecked="{Binding IsUser}">User</RadioButton>
        </StackPanel>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding IsUser,Converter={StaticResource BoolToVisConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">User Name:</Label>
            <TextBox VerticalAlignment="Center" Height="25" Grid.Row="0" Grid.Column="1" Text="{Binding UserName}"></TextBox>
            <Label VerticalAlignment="Center" Grid.Row="1" Grid.Column="0">Password:</Label>
            <PasswordBox VerticalAlignment="Center" Height="25" Grid.Row="1" Grid.Column="1"
               attachedProperties:PasswordBoxAssistant.BindPassword="true"
               attachedProperties:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ></PasswordBox>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Label VerticalAlignment="Center" Margin="0,0,5,0" Content="{Binding TestResult}"></Label>
            <Button Command="{Binding TestCommand}" Margin="0,0,5,0">Test</Button>
            <Button Command="{Binding SaveCommand}" Margin="0,0,5,0">Save</Button>
            <Button Command="{Binding CancelCommand}" Margin="0,0,5,0">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
