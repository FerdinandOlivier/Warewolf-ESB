<UserControl x:Class="Warewolf.Studio.Views.ManageWebserviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:db="clr-namespace:Dev2.Common.Interfaces.DB;assembly=Dev2.Common.Interfaces"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="{x:Type ListBox}">
            <!-- Set the ItemTemplate of the ListBox to a DataTemplate which
           explains how to display an object of type BitmapImage. -->
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <!-- Set the ItemTemplate of the ListBox to a DataTemplate which
           explains how to display an object of type BitmapImage. -->
            <Setter Property="BorderBrush" Value="Transparent">
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border Background="Transparent" x:Name="IconBorder">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <views:NotConverter x:Key="NotConverter"></views:NotConverter>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel MinWidth="600" MaxWidth="{Binding ElementName=UserControl, Path=ActualWidth}">
            <Grid Margin="{StaticResource ElementBorder}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" HorizontalAlignment="Stretch" Margin="{StaticResource GridBorderBottom}" >
                    <!-- Select an Source-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel  Grid.Row="0" 
                             Grid.Column="0" 
                             Background="{StaticResource WareWolfMenuBrush}" 
                             HorizontalAlignment="Stretch" 
                             Orientation="Horizontal">
                        <TextBlock Text="1" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Select Request Method & Source" 
                               Style="{StaticResource SourceHeader}"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="RequestTypes"
                                  Width="Auto"
                                  Focusable="True"
                                  Padding="{StaticResource ComboBoxItemPadding}"
                                  Margin="{StaticResource ElementBorderTop}"></ComboBox>
                        <ComboBox x:Name="SourcesComboBox" 
                                  DisplayMemberPath="Name" 
                                  Width="250" 
                                  Padding="{StaticResource ComboBoxItemPadding}"
                                  Focusable="True"
                                  Margin="{StaticResource ElementBorderTop}" />
                        <Button Width="25" 
                                Content=" ... " 
                                Margin="{StaticResource ElementBorderControlLeftTop}"></Button>
                        <Button Content="New" 
                            Margin="{StaticResource ElementBorderControlLeftTop}"
                            Style="{StaticResource ButtonOrangeStyle}" 
                            Command="{Binding CreateNewSourceCommand}" 
                            Width="100" ></Button>
                    </StackPanel>
                </Grid>
                <Grid x:Name="RequestHeadersGrid" 
                  Grid.Row="1" 
                  Margin="{StaticResource GridBorderBottom}"
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanSelectProcedure, Converter={StaticResource BoolToVis}}">
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="Auto"/>
                        <RowDefinition  Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="2" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Request Headers" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <TextBox x:Name="HeaderText"></TextBox>
                        <TextBox x:Name="HeaderValue"></TextBox>
                    </StackPanel>
                </Grid>
                <Grid x:Name="RequestUrlGrid" 
                  Grid.Row="3" 
                  Margin="{StaticResource GridBorderBottom}"
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanTest, Converter={StaticResource BoolToVis}}">
                    <!-- Test-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="3" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Request URL" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <TextBox x:Name="RequestUrl"
                             HorizontalAlignment="Stretch"
                             Grid.Row="1"></TextBox>
                </Grid>
                <Grid x:Name="RequestBodyGrid" 
                  Grid.Row="4" 
                  Margin="{StaticResource GridBorderBottom}"
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanTest, Converter={StaticResource BoolToVis}}">
                    <!-- Test-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="3" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Request Body" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <TextBox x:Name="RequestBody"
                             HorizontalAlignment="Stretch"
                             Grid.Row="1"></TextBox>
                </Grid>
                <Grid x:Name="RequestVarGrid" 
                  Grid.Row="5" 
                  Margin="{StaticResource GridBorderBottom}"
                  Grid.Column="0" 
                  Visibility="Visible">
                    <!-- Test-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="3" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Request Variables" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <TextBox x:Name="RequestVar"
                             HorizontalAlignment="Stretch"
                             Grid.Row="1"></TextBox>
                </Grid>
                <Grid x:Name="ResponseGrid" 
                  Grid.Row="6" 
                  Margin="{StaticResource GridBorderBottom}"
                  Grid.Column="0" 
                  Visibility="Visible">
                    <!-- Test-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="6" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Response" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <TextBox x:Name="Response"
                             HorizontalAlignment="Stretch"
                             Grid.Row="1"></TextBox>
                </Grid>
                <Grid x:Name="MappingsGrid" 
                  Grid.Row="7" 
                  Grid.Column="0" 
                  Visibility="Visible">
                    <!-- Mappings-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="4" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Mappings" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <views:MappingsView Grid.Row="1"></views:MappingsView>
                </Grid>
                <Grid Grid.Row="8" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding ErrorText}" 
                               HorizontalAlignment="Left" 
                               TextWrapping="WrapWithOverflow" 
                               x:Name="ErrorTextBlock" ></TextBlock>
                    <Button x:Name="SaveButton" 
                        Grid.Column="1" 
                        Margin="{StaticResource ControlBorderTopRight}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Width="100">Save</Button>
                    <Button x:Name="CancelButton" 
                        Grid.Column="1" 
                        Margin="{StaticResource ControlBorderTop}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Width="100">Cancel</Button>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
