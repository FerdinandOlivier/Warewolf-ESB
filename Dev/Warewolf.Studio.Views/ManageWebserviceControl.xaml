<UserControl x:Class="Warewolf.Studio.Views.ManageWebserviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:db="clr-namespace:Dev2.Common.Interfaces.DB;assembly=Dev2.Common.Interfaces"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:dialogues="clr-namespace:Dev2.Common.Interfaces.Studio.ViewModels.Dialogues;assembly=Dev2.Common.Interfaces"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:igPrim="http://schemas.infragistics.com/xaml/primitives"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=dialogues:IManageWebServiceViewModel,
                                              IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="FillerColHeader" TargetType="{x:Type igPrim:HeaderCellControl}">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Width" Value="0"/>
            <Setter Property="MaxWidth" Value="0"/>
        </Style>
        <Style x:Key="FillerColCellStyle"   TargetType="ig:CellControl">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Width" Value="0"/>
            <Setter Property="MaxWidth" Value="0"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel MinWidth="600" MaxWidth="{Binding ElementName=UserControl, Path=ActualWidth}">
            <Grid Margin="{StaticResource ElementBorder}" Width="922"
                  MaxWidth="1200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" 
                      HorizontalAlignment="Stretch" 
                      Margin="{StaticResource GridBorderBottom}" >
                    <!-- Select an Source-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                             Grid.Column="0" 
                             Background="{StaticResource WareWolfMenuBrush}" 
                             HorizontalAlignment="Stretch" 
                             Orientation="Horizontal">
                        <TextBlock Text="1" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="{Binding SelectSourceHeader}" 
                               Style="{StaticResource SourceHeader}"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="RequestTypes"
                                  Width="80"
                                  Focusable="True"
                                  ItemsSource="{Binding WebRequestMethods}"
                                  SelectedItem="{Binding SelectedWebRequestMethod}"
                                  Padding="{StaticResource ComboBoxItemPadding}"
                                  Margin="{StaticResource ElementBorderTop}"></ComboBox>
                        <ComboBox x:Name="SourcesComboBox" 
                                  DisplayMemberPath="Name" 
                                  Width="250" 
                                  ItemsSource="{Binding Sources}"
                                  Padding="{StaticResource ComboBoxItemPadding}"
                                  Focusable="True"
                                  SelectedItem="{Binding SelectedSource}"
                                  Margin="{StaticResource ElementBorderControlLeftTop}" />
                        <Button Width="25" 
                                Command="{Binding SelectedSource}" 
                                IsEnabled="{Binding HasChanged}" 
                                Content=" ... " 
                                Margin="{StaticResource ElementBorderControlLeftTop}"></Button>
                        <Button Content="New" 
                            Margin="{StaticResource ElementBorderControlLeftTop}"
                            Style="{StaticResource ButtonOrangeStyle}" 
                            Command="{Binding NewWebSourceCommand}" 
                            Width="100" ></Button>
                    </StackPanel>
                </Grid>
                <!-- REQUEST HEADERS -->
                <Grid x:Name="RequestHeadersGrid" 
                      Grid.Row="1" 
                      Margin="{StaticResource GridBorderBottom}"
                      Visibility="{Binding Path=CanEditHeadersAndUrl, Converter={StaticResource BoolToVis}}"
                      Grid.Column="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"></ColumnDefinition>
                        <ColumnDefinition Width="50*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- REQUEST HEADER -->
                    <StackPanel Grid.Row="0" 
                                Grid.Column="0" 
                                Grid.ColumnSpan="2"
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="2" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="{Binding RequestHeader}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <!-- HEADER -->
                    <Grid Grid.Column="0" 
                          Grid.Row="1"
                          Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Grid.Column="0"
                                   Text="{Binding SelectHeadersHeader}" 
                                   FontWeight="Bold"></TextBlock>
                        <ScrollViewer Grid.Row="1" 
                                      Grid.Column="0" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto">
                            <Grid Width="460" MaxHeight="110">
                                <ig:XamGrid x:Name="HeadersGrid" 
                                    ItemsSource="{Binding Headers}" 
                                    AutoGenerateColumns="False"
                                    IsAlternateRowsEnabled="False"
                                    DeleteKeyAction="DeleteRowOfActiveCell"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                    ColumnWidth="*" >
                                    <ig:XamGrid.Columns>
                                        <ig:TextColumn Key="Name" HeaderText="Name" MinimumWidth="100">
                                            <ig:TextColumn.AddNewRowEditorTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding Path=Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                                </DataTemplate>
                                            </ig:TextColumn.AddNewRowEditorTemplate>
                                        </ig:TextColumn>
                                        <ig:TextColumn Key="Value" HeaderText="Value" MinimumWidth="100" IsResizable="False">
                                            <ig:TextColumn.AddNewRowEditorTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding Path=Value, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                                </DataTemplate>
                                            </ig:TextColumn.AddNewRowEditorTemplate>
                                        </ig:TextColumn>
                                    </ig:XamGrid.Columns>
                                    <ig:XamGrid.AddNewRowSettings>
                                        <ig:AddNewRowSettings AllowAddNewRow="Top" 
                                                      IsMouseActionEditingEnabled="SingleClick"
                                                      IsEnterKeyEditingEnabled="True" 
                                                      IsF2EditingEnabled="True" 
                                                      IsOnCellActiveEditingEnabled="True"
                                                      />
                                    </ig:XamGrid.AddNewRowSettings>
                                    <ig:XamGrid.SortingSettings>
                                        <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                                    </ig:XamGrid.SortingSettings>
                                    <ig:XamGrid.EditingSettings>
                                        <ig:EditingSettings AllowEditing="Cell"
                                                    IsMouseActionEditingEnabled="DoubleClick"
                                                    IsEnterKeyEditingEnabled="True" 
                                                    IsF2EditingEnabled="True" 
                                                    IsOnCellActiveEditingEnabled="False" />
                                    </ig:XamGrid.EditingSettings>
                                    <!-- Conditional Formating is On-->
                                    <ig:XamGrid.ConditionalFormattingSettings>
                                        <ig:ConditionalFormattingSettings AllowConditionalFormatting="True"/>
                                    </ig:XamGrid.ConditionalFormattingSettings>
                                    <!-- Filler Column Setting is On-->
                                    <ig:XamGrid.FillerColumnSettings>
                                        <ig:FillerColumnSettings   Style="{StaticResource FillerColCellStyle}" HeaderStyle="{StaticResource FillerColHeader}" />
                                    </ig:XamGrid.FillerColumnSettings>
                                </ig:XamGrid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <!-- BODY -->
                    <Grid Grid.Column="1" 
                          Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="7" ></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding RequestBodyHeader}" 
                                   FontWeight="Bold"></TextBlock>
                        <TextBox Grid.Row="1" 
                                 x:Name="RequestBody"
                                 MaxHeight="110"
                                 Text="{Binding RequestBody}"
                                 Visibility="{Binding RequestBodyEnabled, Converter={StaticResource BoolToVis}}"
                                 HorizontalAlignment="Stretch" ></TextBox>
                    </Grid>
                    <!-- URL -->
                    <TextBlock Grid.Column="0" 
                               Grid.Row="2" 
                               Text="{Binding RequestUrlHeader}" 
                               FontWeight="Bold"></TextBlock>
                    <Grid Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                           Visibility="{Binding CanEditHeadersAndUrl, Converter={StaticResource BoolToVis}}"
                               Text="{Binding SourceUrl}">
                        </TextBlock>
                        <TextBox x:Name="RequestUrl"
                             HorizontalAlignment="Stretch"
                             Text="{Binding RequestUrlQuery}"
                             Grid.Column="1"></TextBox>
                    </Grid>
                </Grid>
                <!-- REQUEST VARIABLES -->
                <Grid x:Name="RequestVarGrid" 
                      Grid.Row="2" 
                      Margin="{StaticResource GridBorderBottom}"
                      Visibility="{Binding Path=CanEditHeadersAndUrl, Converter={StaticResource BoolToVis}}"
                      Grid.Column="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <!-- VARIABLES HEADER -->
                    <StackPanel Grid.Row="0" 
                                Grid.Column="0" 
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="3" 
                                   Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                                   Text="{Binding VariablesHeader}" 
                                   Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto">
                        <StackPanel Width="922" 
                            MaxWidth="1200" 
                            MaxHeight="180" 
                            Margin="{StaticResource ControlBorderTop}">
                            <ig:XamGrid ItemsSource="{Binding Variables}" 
                                x:Name="VariablesGrid"
                                AutoGenerateColumns="False"
                                ColumnWidth="*" 
                                IsAlternateRowsEnabled="False"
                                BorderBrush="Transparent" >
                                <ig:XamGrid.Columns>
                                    <ig:TextColumn Key="Name" HeaderText="Name" IsReadOnly="True" MinimumWidth="300">
                                        <ig:TextColumn.AddNewRowEditorTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                            </DataTemplate>
                                        </ig:TextColumn.AddNewRowEditorTemplate>
                                    </ig:TextColumn>
                                    <ig:TextColumn Key="Value" HeaderText="Value" MinimumWidth="300" IsResizable="False">
                                        <ig:TextColumn.AddNewRowEditorTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Path=Value, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                            </DataTemplate>
                                        </ig:TextColumn.AddNewRowEditorTemplate>
                                    </ig:TextColumn>
                                </ig:XamGrid.Columns>
                                <ig:XamGrid.SortingSettings>
                                    <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                                </ig:XamGrid.SortingSettings>
                                <ig:XamGrid.EditingSettings>
                                    <ig:EditingSettings AllowEditing="Cell"
                                                    IsMouseActionEditingEnabled="DoubleClick"
                                                    IsEnterKeyEditingEnabled="True" 
                                                    IsF2EditingEnabled="True" 
                                                    IsOnCellActiveEditingEnabled="False" />
                                </ig:XamGrid.EditingSettings>
                            </ig:XamGrid>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="TestButton" 
                                Grid.Column="0"
                                Margin="{StaticResource ControlBorderTopRight}" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Bottom" 
                                Command="{Binding TestCommand}"
                                Width="100">Test</Button>
                        <views:CircularProgressBar Grid.Column="1"
                                               Width="25"
                                               HorizontalAlignment="Right" 
                                               Height="25"
                                               Padding="1.5"
                                               Visibility="{Binding Path=IsTesting,Converter={StaticResource BoolToVis}}" />
                    </Grid>
                </Grid>
                <!-- RESPONSE -->
                <Grid x:Name="ResponseGrid" 
                      Grid.Row="3" 
                      Margin="{StaticResource GridBorderBottom}"
                      Grid.Column="0" 
                      Visibility="{Binding Path=CanEditHeadersAndUrl, Converter={StaticResource BoolToVis}}">
                    <!-- Test-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                                Grid.ColumnSpan="2"
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="4" 
                                   Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                                   Text="{Binding ResponseHeader}" 
                                   Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <Button Width="25" 
                            Height="25"
                            Grid.Column="0"
                            Click="Btn_OnClick"
                            Margin="{StaticResource ControlBorderTop}"
                            VerticalAlignment="Top"
                            Grid.Row="1" >
                        <fa:FontAwesome TextOptions.TextFormattingMode="Display" 
                                        FontSize="16" 
                                        FontWeight="DemiBold" 
                                        Icon="Pencil" 
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Center"/>
                    </Button>
                    <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                        <Grid Margin="{StaticResource ControlBorderLeftTop}" >
                            <TextBlock x:Name="Response"
                                       Text="{Binding Response}"
                                       TextWrapping="Wrap"
                                       MaxHeight="180"
                                       HorizontalAlignment="Stretch"></TextBlock>
                        </Grid>
                    </ScrollViewer>
                </Grid>
                <!-- MAPPINGS -->
                <Grid x:Name="MappingsGrid" 
                  Grid.Row="4" 
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanEditMappings,Converter={StaticResource BoolToVis}}">
                    <!-- Mappings-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            Orientation="Horizontal">
                        <TextBlock Text="5" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="{Binding MappingsHeader}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <views:MappingsView Grid.Row="1"></views:MappingsView>
                </Grid>
                <Grid Grid.Row="5" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding ErrorText}" 
                               HorizontalAlignment="Left" 
                               TextWrapping="WrapWithOverflow" 
                               x:Name="ErrorTextBlock" ></TextBlock>
                    <Button x:Name="SaveButton" 
                            Grid.Column="2" 
                            Margin="{StaticResource ControlBorderTopRight}" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom" 
                            Command="{Binding SaveCommand}" 
                            Width="100">Save</Button>
                    <Button x:Name="CancelButton" 
                            Grid.Column="3" 
                            Margin="{StaticResource ControlBorderTop}" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom" 
                            Command="{Binding CancelCommand}"
                            Width="100">Cancel</Button>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
