        <Style TargetType="{x:Type ListBox}">
            <!-- Set the ItemTemplate of the ListBox to a DataTemplate which
           explains how to display an object of type BitmapImage. -->
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <!-- Set the ItemTemplate of the ListBox to a DataTemplate which
           explains how to display an object of type BitmapImage. -->
            <Setter Property="BorderBrush" Value="Transparent">
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border Background="Transparent" x:Name="IconBorder">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <views:NotConverter x:Key="NotConverter"></views:NotConverter>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel MinWidth="600" MaxWidth="{Binding ElementName=UserControl, Path=ActualWidth}">
            <Grid Margin="{StaticResource ElementBorder}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" 
                      HorizontalAlignment="Stretch" 
                      Margin="{StaticResource GridBorderBottom}" >
                    <!-- Select an Source-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                             Grid.Column="0" 
                             Background="{StaticResource WareWolfMenuBrush}" 
                             HorizontalAlignment="Stretch" 
                             Orientation="Horizontal">
                        <TextBlock Text="1" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="{Binding SelectSourceHeader}" 
                               Style="{StaticResource SourceHeader}"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                        <ComboBox x:Name="RequestTypes"
                                  Width="80"
                                  Focusable="True"
                                  ItemsSource="{Binding WebRequestMethods}"
                                  SelectedItem="{Binding SelectedWebRequestMethod}"
                                  Padding="{StaticResource ComboBoxItemPadding}"
                                  Margin="{StaticResource ElementBorderTop}"></ComboBox>
                        <ComboBox x:Name="SourcesComboBox" 
                                  DisplayMemberPath="Name" 
                                  Width="250" 
                                  ItemsSource="{Binding Sources}"
                                  Padding="{StaticResource ComboBoxItemPadding}"
                                  Focusable="True"
                                  SelectedItem="{Binding SelectedSource}"
                                  Margin="{StaticResource ElementBorderControlLeftTop}" />
                        <Button Width="25" 
                                Command="{Binding SelectedSource}" 
                                IsEnabled="{Binding HasChanged}" 
                                Content=" ... " 
                                Margin="{StaticResource ElementBorderControlLeftTop}"></Button>
                        <Button Content="New" 
                            Margin="{StaticResource ElementBorderControlLeftTop}"
                            Style="{StaticResource ButtonOrangeStyle}" 
                            Command="{Binding NewWebSourceCommand}" 
                            Width="100" ></Button>
                    </StackPanel>
                </Grid>
                <!-- REQUEST HEADERS -->
                <Grid x:Name="RequestHeadersGrid" 
                      Grid.Row="1" 
                      Margin="{StaticResource GridBorderBottom}"
                      Grid.Column="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"></ColumnDefinition>
                        <ColumnDefinition Width="50*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- REQUEST HEADER -->
                    <StackPanel Grid.Row="0" 
                                Grid.Column="0" 
                                Grid.ColumnSpan="2"
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="2" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="{Binding RequestHeader}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <!-- HEADER -->
                    <Grid Grid.Column="0" 
                          Grid.Row="1"
                          Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Grid.Column="0"
                                   Text="{Binding SelectHeadersHeader}" 
                                   FontWeight="Bold"></TextBlock>
                        <ig:XamGrid x:Name="HeadersGrid" 
                                    ItemsSource="{Binding Headers}" 
                                    AutoGenerateColumns="False"
                                    Grid.Row="1" 
                                    Height="Auto"
                                    Grid.Column="0" 
                                    MaxWidth="600"
                                    ColumnWidth="*" 
                                    MaxHeight="180">
                            <ig:XamGrid.Columns>
                                <ig:TextColumn Key="Name" HeaderText="Name" Width="299">
                                    <ig:TextColumn.AddNewRowEditorTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Path=Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                        </DataTemplate>
                                    </ig:TextColumn.AddNewRowEditorTemplate>
                                </ig:TextColumn>
                                <ig:TextColumn Key="Value" HeaderText="Value" Width="299">
                                    <ig:TextColumn.AddNewRowEditorTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Path=Value, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                        </DataTemplate>
                                    </ig:TextColumn.AddNewRowEditorTemplate>
                                </ig:TextColumn>
                            </ig:XamGrid.Columns>
                            <ig:XamGrid.AddNewRowSettings>
                                <ig:AddNewRowSettings AllowAddNewRow="Top" 
                                                      IsMouseActionEditingEnabled="SingleClick"
                                                      IsEnterKeyEditingEnabled="True" 
                                                      IsF2EditingEnabled="True" 
                                                      IsOnCellActiveEditingEnabled="True"
                                                      Style="{StaticResource AddNewRowCellControlStyle}"/>
                            </ig:XamGrid.AddNewRowSettings>
                            <ig:XamGrid.SortingSettings>
                                <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                            </ig:XamGrid.SortingSettings>
                            <ig:XamGrid.EditingSettings>
                                <ig:EditingSettings AllowEditing="Cell"
                                                    IsMouseActionEditingEnabled="SingleClick"
                                                    IsEnterKeyEditingEnabled="True" 
                                                    IsF2EditingEnabled="True" 
                                                    IsOnCellActiveEditingEnabled="True" />
                            </ig:XamGrid.EditingSettings>
                            <!-- Conditional Formating is On-->
                            <ig:XamGrid.ConditionalFormattingSettings>
                                <ig:ConditionalFormattingSettings AllowConditionalFormatting="True"/>
                            </ig:XamGrid.ConditionalFormattingSettings>
                            <!-- Filler Column Setting is On-->
                            <ig:XamGrid.FillerColumnSettings>
                                <ig:FillerColumnSettings   Style="{StaticResource FillerColCellStyle}" HeaderStyle="{StaticResource FillerColHeader}" />
                            </ig:XamGrid.FillerColumnSettings>
                        </ig:XamGrid>
                    </Grid>
                    <!-- BODY -->
                    <Grid Grid.Column="1" 
                          Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="7" ></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding RequestBodyHeader}" 
                                   FontWeight="Bold"></TextBlock>
                        <TextBox Grid.Row="1" 
                                 x:Name="RequestBody"
                                 Text="{Binding RequestBody}"
                                 Visibility="{Binding RequestBodyEnabled, Converter={StaticResource BoolToVis}}"
                                 HorizontalAlignment="Stretch" ></TextBox>
                    </Grid>
                    <!-- URL -->
                    <TextBlock Grid.Column="0" 
                               Grid.Row="2" 
                               Text="{Binding RequestUrlHeader}" 
                               FontWeight="Bold"></TextBlock>
                    <Grid Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                               Text="{Binding SourceUrl}">
                        </TextBlock>
                    <TextBox x:Name="RequestUrl"
                             HorizontalAlignment="Stretch"
                             Text="{Binding RequestUrlQuery}"
                             Grid.Column="1"></TextBox>
                    </Grid>
                </Grid>
                <!-- REQUEST VARIABLES -->
                <Grid x:Name="RequestVarGrid" 
                      Grid.Row="2" 
                      Margin="{StaticResource GridBorderBottom}"
                      Grid.Column="0" 
                      Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <!-- VARIABLES HEADER -->
                    <StackPanel Grid.Row="0" 
                                Grid.Column="0" 
                                Grid.ColumnSpan="2"
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="3" 
                                   Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                                   Text="{Binding VariablesHeader}" 
                                   Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <ig:XamGrid ItemsSource="{Binding Variables}" 
                                x:Name="VariablesGrid"
                                AutoGenerateColumns="False"
                                Grid.Row="1" 
                                Grid.Column="1"
                                ColumnWidth="250" 
                                MaxWidth="1200"
                                DeleteKeyAction="DeleteRowOfActiveCell"
                                Margin="{StaticResource ControlBorderTop}"
                                MaxHeight="180"
                                BorderBrush="Transparent" >
                        <ig:XamGrid.Columns>
                            <ig:TextColumn Key="Name" HeaderText="Name" Width="600" IsReadOnly="True">
                                <ig:TextColumn.AddNewRowEditorTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                    </DataTemplate>
                                </ig:TextColumn.AddNewRowEditorTemplate>
                            </ig:TextColumn>
                            <ig:TextColumn Key="Value" HeaderText="Value" Width="600">
                                <ig:TextColumn.AddNewRowEditorTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Path=Value, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" />
                                    </DataTemplate>
                                </ig:TextColumn.AddNewRowEditorTemplate>
                            </ig:TextColumn>
                        </ig:XamGrid.Columns>
                        <ig:XamGrid.SortingSettings>
                            <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                        </ig:XamGrid.SortingSettings>
                        <ig:XamGrid.EditingSettings>
                            <ig:EditingSettings AllowEditing="Cell"
                                                    IsMouseActionEditingEnabled="SingleClick"
                                                    IsEnterKeyEditingEnabled="True" 
                                                    IsF2EditingEnabled="True" 
                                                    IsOnCellActiveEditingEnabled="True" />
                        </ig:XamGrid.EditingSettings>
                    </ig:XamGrid>
                </Grid>
                <!-- RESPONSE -->
                <Grid x:Name="ResponseGrid" 
                      Grid.Row="3" 
                      Margin="{StaticResource GridBorderBottom}"
                      Grid.Column="0" 
                      Visibility="Visible">
                    <!-- Test-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                                Grid.ColumnSpan="2"
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="4" 
                                   Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                                   Text="{Binding ResponseHeader}" 
                                   Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <Button Width="25" 
                            Height="25"
                            Grid.Column="0"
                            Click="Btn_OnClick"
                            Margin="{StaticResource ControlBorderTop}"
                            Grid.Row="1" >
                        <fa:FontAwesome TextOptions.TextFormattingMode="Display" 
                                        FontSize="16" 
                                        FontWeight="DemiBold" 
                                        Icon="Pencil" 
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Center"/>
                    </Button>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <ScrollViewer >
                            <TextBlock x:Name="Response"
                                       Margin="{StaticResource ControlBorderLeftTop}"
                                       Text="{Binding Response}"
                                       TextWrapping="Wrap"
                                       MaxHeight="180"
                                       HorizontalAlignment="Stretch"></TextBlock>
                        </ScrollViewer>
                    </Grid>
                </Grid>
                <!-- MAPPINGS -->
                <Grid x:Name="MappingsGrid" 
                  Grid.Row="4" 
                  Grid.Column="0" 
                  Visibility="Visible">
                    <!-- Mappings-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                         
                            Orientation="Horizontal">
                        <TextBlock Text="5" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="{Binding MappingsHeader}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <views:MappingsView Grid.Row="1" MaxWidth="1200"></views:MappingsView>
                </Grid>
                <Grid Grid.Row="5" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding ErrorText}" 
                               HorizontalAlignment="Left" 
                               TextWrapping="WrapWithOverflow" 
                               x:Name="ErrorTextBlock" ></TextBlock>
                    <Button x:Name="TestButton" 
                            Grid.Column="1" 
                            Margin="{StaticResource ControlBorderTopRight}" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom" 
                            Command="{Binding TestCommand}"
                            Width="100">Test</Button>
                    <Button x:Name="SaveButton" 
                            Grid.Column="2" 
                        Margin="{StaticResource ControlBorderTopRight}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                            Command="{Binding SaveCommand}" 
                        Width="100">Save</Button>
                    <Button x:Name="CancelButton" 
                            Grid.Column="3" 
                        Margin="{StaticResource ControlBorderTop}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                            Command="{Binding CancelCommand}"
                        Width="100">Cancel</Button>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
