<UserControl x:Class="Warewolf.Studio.Views.ManageWebserviceSourceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:views="clr-namespace:Warewolf.Studio.Views"
    xmlns:serviceModel="clr-namespace:Dev2.Common.Interfaces.Runtime.ServiceModel;assembly=Dev2.Common.Interfaces"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:dialogues="clr-namespace:Dev2.Common.Interfaces.Studio.ViewModels.Dialogues;assembly=Dev2.Common.Interfaces"
    xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
    xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800" BorderBrush="White"
             d:DataContext="{d:DesignInstance Type=dialogues:IManageWebserviceSourceViewModel,
                                              IsDesignTimeCreatable=False}"
    >

    <UserControl.Resources>
        <views:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="White"  FocusManager.FocusedElement="{Binding ElementName=ServerTextBox}">      
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="{StaticResource WareWolfMenuBrush}" Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
            <TextBlock Margin="10" Text="{Binding HeaderText}" Style="{StaticResource SourceHeader}" />
        </StackPanel>
        <TextBlock Margin="{StaticResource ElementBorderLeftRightTop}" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Text="{Binding HostNameLabel}"/>
        <TextBox x:Name="ServerTextBox"   Margin="{StaticResource ElementBorderLeftTopRight}" Grid.Row="2" Grid.Column="1" Text="{Binding HostName,UpdateSourceTrigger=PropertyChanged}"
            views:FocusExtension.IsFocused="True">
            <i:Interaction.Behaviors>
                <core:HelpSetter Text="{x:Static languages:Core.DatabaseSourceServerHelp}"
                    DataContext="{Binding}" />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBlock Margin="{StaticResource ElementBorderLeftRightTop}"  VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Text="{Binding AuthenticationLabel}"/>
        <StackPanel  Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <RadioButton Margin="{StaticResource ElementBorderLeftTopRight}" x:Name="AnonymousRadioButton" ToolTip="{Binding Path=AnonymousAuthenticationToolTip}"  VerticalAlignment="Center"  HorizontalAlignment="Left" IsChecked="{Binding Path=AuthenticationType, Mode=TwoWay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static serviceModel:AuthenticationType.Anonymous}}" Content="Anonymous">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.WindowsAuthenticationHelp}"
                        DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </RadioButton>
            <RadioButton x:Name="UserRadioButton" Margin="{StaticResource ElementBorderLeftTopRight}" ToolTip="{Binding Path=UserAuthenticationToolTip}"    VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=AuthenticationType, Mode=TwoWay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static serviceModel:AuthenticationType.User}}" Content="User">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.UserAuthenticationHelp}"
                        DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </RadioButton>
        </StackPanel>
        <Grid x:Name="UserNamePasswordContainer" Grid.Row="4" Grid.Column="0" ColumnSpan="2" Visibility="{Binding Path=UserAuthenticationSelected,Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="{StaticResource ElementBorderLeftRightTop}" Grid.Row="0" Grid.Column="0" Text="{Binding UserNameLabel}"/>
            <TextBox x:Name="UserNameTextBox" Margin="{StaticResource ElementBorderLeftTopRight}" Grid.Row="0" Grid.Column="1" Text="{Binding UserName,UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.UserNameAuthenticationHelp}"
                        DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </TextBox>
            <TextBlock Margin="{StaticResource ElementBorderLeftRightTop}" Grid.Row="1" Grid.Column="0" Text="{Binding PasswordLabel}"/>
            <PasswordBox x:Name="PasswordTextBox" Margin="{StaticResource ElementBorderLeftTopRight}" Grid.Row="1" Grid.Column="1"
                customControls:PasswordBoxAssistant.BindPassword="true"
                customControls:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.PasswordAuthenticationHelp}"
                        DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </PasswordBox>
        </Grid>
        <Grid x:Name="DatabaseComboxContainer" Grid.Row="5" Grid.Column="0" ColumnSpan="2" Visibility="{Binding Path=TestPassed,Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="{StaticResource ElementBorderLeftRightTop}" Grid.Column="0" Text="{Binding DefaultQueryLabel}"/>
            <StackPanel Margin="{StaticResource ElementBorderLeftTopRight}" Grid.Column="1" >
                <TextBox x:Name="DatabaseComboxBox"  Text="{Binding DefaultQuery}" >
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.DatabaseSourceDatabasesHelp}"
                            DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock TextWrapping="WrapWithOverflow" x:Name="ErrorTextBlock" Text="{Binding TestMessage}" Visibility="{Binding Path=TestFailed,Converter={StaticResource BoolToVisibilityConverter}}"></TextBlock>
            <fa:ImageAwesome Width="14"  Height="14"  Foreground="{StaticResource WareWolfOrangeBrush}" Visibility="{Binding Path=TestPassed,Converter={StaticResource BoolToVisibilityConverter}}" Icon="Check" HorizontalAlignment="Right" />
            <fa:ImageAwesome Width="14" Height="14"  Foreground="{StaticResource WareWolfOrangeBrush}" Visibility="{Binding Path=TestFailed,Converter={StaticResource BoolToVisibilityConverter}}" Icon="Ban" HorizontalAlignment="Right" />
            <views:CircularProgressBar
               
                Width="14"
                Height="14"
                Visibility="{Binding Path=Testing,Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button x:Name="TestConnectionButton" Margin="{StaticResource ElementBorderLeftTop}" Width="120" Height="30" Command="{Binding TestCommand}" Content="{Binding TestLabel}" ToolTip="{Binding Path=TestToolTip}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.DatabaseSourceTestConnectionHelp}"
                        DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
            <Button Margin="{StaticResource ElementBorderLeftTopRight}" Width="120" Height="30" Command="{Binding ViewInBrowserCommand}"  Content="{Binding ViewInBrowserLabel}"></Button>
        </StackPanel>
        <Button x:Name="SaveButton" Grid.Row="8" Margin="{StaticResource ElementBottomRightBorder}" Grid.Column="1" Width="60" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Command="{Binding OkCommand}" Content="Save">
            <i:Interaction.Behaviors>
                <core:HelpSetter Text="{x:Static languages:Core.DatabaseSourceSaveHelp}"
                    DataContext="{Binding}" />
            </i:Interaction.Behaviors>
        </Button>
    </Grid>
</UserControl>