<UserControl x:Class="Warewolf.Studio.Views.ManageDatabaseServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:db="clr-namespace:Dev2.Common.Interfaces.DB;assembly=Dev2.Common.Interfaces"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
             Loaded="ManageDatabaseServiceControl_OnLoaded"
             d:DataContext="{d:DesignInstance Type=db:IManageDbServiceViewModel,
                                              IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="{x:Type ListBox}">
            <!-- Set the ItemTemplate of the ListBox to a DataTemplate which
           explains how to display an object of type BitmapImage. -->
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <!-- Set the ItemTemplate of the ListBox to a DataTemplate which
           explains how to display an object of type BitmapImage. -->
            <Setter Property="BorderBrush" Value="Transparent">
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border Background="Transparent" x:Name="IconBorder">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid Margin="{StaticResource ContainerBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto" ></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto" ></RowDefinition>
                <RowDefinition Height="Auto" ></RowDefinition>
                <RowDefinition Height="Auto" ></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Stretch"  >
                <!-- Select an Source-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="7" ></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel  Grid.Row="0" 
                             Grid.Column="0" 
                             Background="{StaticResource WareWolfMenuBrush}" 
                             HorizontalAlignment="Stretch" 
                             Orientation="Horizontal">
                    <TextBlock Text="1" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                    <TextBlock Margin="5" 
                               Text="{Binding DataSourceHeader, Mode=OneWay}" 
                               Style="{StaticResource SourceHeader}"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                    <ComboBox x:Name="SourcesComboBox" 
                              ItemsSource="{Binding Sources}" 
                              DisplayMemberPath="Name" 
                              Width="250" 
                              Padding="{StaticResource ComboBoxItemPadding}"
                              Focusable="True"
                              Margin="{StaticResource ElementBorderTop}" 
                              SelectedItem="{Binding SelectedSource}" />
                    <Button Command="{Binding EditSourceCommand}" 
                            IsEnabled="{Binding CanEditSource}" 
                            Width="25" 
                            Content=" ... " 
                            Margin="{StaticResource ElementBorderControlLeftTop}"></Button>
                    <TextBlock Text="or" Margin="{StaticResource ElementBorderControlLeftTop}"></TextBlock>
                    <Button Content="{Binding NewButtonLabel}" 
                            Margin="{StaticResource ElementBorderControlLeftTop}"
                            Style="{StaticResource ButtonOrangeStyle}" 
                            Command="{Binding CreateNewSourceCommand}" 
                            Width="100" ></Button>
                </StackPanel>
            </Grid>
            <Grid x:Name="SelectAnActionGrid" 
                  Grid.Row="1" 
                  Margin="0,-2,0,0"
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanSelectProcedure, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="7" ></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                    <TextBlock Text="2" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                    <TextBlock Margin="5" 
                               Text="{Binding DataSourceActionHeader, Mode=OneWay}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1" HorizontalAlignment="Left" >
                    <!-- Choose data Source Action-->
                    <ComboBox x:Name="ActionsComboBox" 
                              Width="280" 
                              Padding="{StaticResource ComboBoxItemPadding}"
                              ItemsSource="{Binding AvalaibleActions}" 
                              DisplayMemberPath="Name" 
                              SelectedItem="{Binding SelectedAction}" 
                              Text="Choose" 
                              Margin="{StaticResource ElementBorderTop}"></ComboBox>
                </StackPanel>
            </Grid>
            <Grid x:Name="TestActionGrid" 
                  Grid.Row="3" 
                  Margin="0,-2,0,0"
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanTest, Converter={StaticResource BoolToVis}}">
                <!-- Test-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="7" ></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                    <TextBlock Text="3" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                    <TextBlock Margin="5" 
                               Text="{Binding TestHeader, Mode=OneWay}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                </StackPanel>
                <TextBlock Grid.Row="1" 
                           Margin="0,-1,0,0" 
                           Text="Inputs" 
                           FontWeight="Bold"></TextBlock>
                <Grid Grid.Row="2" Margin="0,-5,0,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="InputsList" Grid.IsSharedSizeScope="True" ItemsSource="{Binding Inputs}" BorderBrush="Transparent" Padding="0,0,0,1" >
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="db:IDbInput">
                                <StackPanel Orientation="Horizontal" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition SharedSizeGroup="{Binding Name}" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Margin="{StaticResource ControlBorderTop}" Text="{Binding Path=Name }" Width="85"></TextBlock>
                                        <TextBox Grid.Column="1" Margin="{StaticResource ControlBorderTop}" Text="{Binding Path=Value}" Width="200"></TextBox>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <views:CircularProgressBar Grid.Row="1"
                                       Grid.Column="0"
                                       Width="14"
                                       Height="14"
                                       Visibility="{Binding Path=TestProcedureCommand,Converter={StaticResource BoolToVis}}" />
                    <Button x:Name="TestActionButton" 
                            Grid.Column="0" 
                            Grid.Row="1" 
                            Margin="0,0,2,0"
                            HorizontalAlignment="Right" 
                            Command="{Binding TestProcedureCommand}" 
                            VerticalAlignment="Bottom" 
                            Width="100">Test</Button>
                </Grid>
                <TextBlock Grid.Row="4" 
                           Margin="0,-3,0,0"
                           Text="{Binding OutputsLabel}" 
                           FontWeight="Bold" 
                           Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}"></TextBlock>
                <DataGrid x:Name="OutputsDataGrid" 
                          Margin="0,-2,0,0"
                          Grid.Row="5" 
                          HorizontalScrollBarVisibility="Disabled" 
                          ItemsSource="{Binding TestResults}" 
                          Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}" 
                          GridLinesVisibility="Vertical" 
                          ColumnWidth="*" 
                          AutoGenerateColumns="True" 
                          CanUserSortColumns="False"
                          CanUserReorderColumns="False"
                          BorderBrush="Transparent" 
                          CanUserResizeColumns="True" 
                          VerticalGridLinesBrush="Transparent" >
                </DataGrid>
            </Grid>
            <Grid x:Name="MappingsGrid" 
                  Margin="0,-3,0,0"
                  Grid.Row="4" 
                  Grid.Column="0" 
                  Visibility="{Binding Path=CanEditMappings,Converter={StaticResource BoolToVis}}">
                <!-- Mappings-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="7" ></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                    <TextBlock Text="4" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                    <TextBlock Margin="5" 
                               Text="{Binding MappingsHeader, Mode=OneWay}" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                </StackPanel>
                <TextBlock FontWeight="Bold" 
                           Grid.Row="1" 
                           Margin="0,-1,0,0"
                           Text="{Binding InputsLabel}"></TextBlock>
                <DataGrid x:Name="InputsMappingDataGrid" 
                          Grid.Row="2" 
                          Margin="0,-2,0,0"
                          ItemsSource="{Binding Inputs}" 
                          HorizontalScrollBarVisibility="Disabled" 
                          GridLinesVisibility="Vertical" 
                          AutoGenerateColumns="False" 
                          CanUserSortColumns="False"
                          CanUserReorderColumns="False"
                          ColumnWidth="*" 
                          BorderBrush="Transparent" 
                          CanUserResizeColumns="True" 
                          VerticalGridLinesBrush="Transparent">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Input" CanUserResize="True" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" ></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Default Value" CanUserResize="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Path=DefaultValue, UpdateSourceTrigger=PropertyChanged}" Margin="1"></TextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Required Field" CanUserResize="True" Width="150" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=Required, Mode=TwoWay}" Margin="-1" HorizontalAlignment="Center"></CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Empty is Null" CanUserResize="True" Width="150" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=EmptyIsNull, Mode=TwoWay}" HorizontalAlignment="Center" Margin="-1"></CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Grid.Row="3" 
                           FontWeight="Bold" 
                           Text="{Binding OutputsLabel}" 
                           Margin="0,-1,0,0" ></TextBlock>
                <DataGrid x:Name="OutputsMappingDataGrid" 
                          Grid.Row="4" 
                          Margin="0,-2,0,0"
                          ItemsSource="{Binding OutputMapping}" 
                          HorizontalScrollBarVisibility="Disabled" 
                          GridLinesVisibility="Vertical" 
                          ColumnWidth="*" 
                          AutoGenerateColumns="False" 
                          CanUserSortColumns="False"
                          CanUserReorderColumns="False"
                          BorderBrush="Transparent" 
                          CanUserResizeColumns="True" 
                          VerticalGridLinesBrush="Transparent">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Output" CanUserResize="True" Width="50*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CompleteName}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Alias" CanUserResize="True" Width="50*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Path=OutputName, UpdateSourceTrigger=PropertyChanged}" Margin="1"></TextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,2,0,0" >
                    <TextBlock Text="Recordset Name" ></TextBlock>
                    <TextBox MinWidth="100" Text="{Binding RecordsetName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="5" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding ErrorText}" 
                               HorizontalAlignment="Left" 
                               TextWrapping="WrapWithOverflow" 
                               x:Name="ErrorTextBlock" ></TextBlock>
                <Button x:Name="SaveButton" 
                        Grid.Column="1" 
                        Margin="{StaticResource ControlBorderTop}" 
                        HorizontalAlignment="Right" 
                        Command="{Binding SaveCommand}" 
                        VerticalAlignment="Bottom" 
                        Width="100">Save</Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
